@model Application


<div class="text-center">
<h1>Movie Form</h1>
<p>Here is where you can submit your movie to Joel's collection</p>
</div>

<!-- Make form center on website-->
<style>
	.form {
		justify-content: center;
		align-items: center;
		display: flex;
	}
	</style>

<!-- Initiate form -->
<div class="form">
	 
	<form method="post">

		<label asp-for="Category">Category:</label>
		<input asp-for="Category" required/>
		<br /><br />
	
		<label asp-for="Tittle">Tittle:</label>
		<input asp-for="Tittle" required>
		<br /><br />

		<label asp-for="Year">Year:</label>
		<input asp-for="Year" required>
		<br /><br />

		<label asp-for="Director">Director:</label>
		<input asp-for="Director" required>
		<br /><br />

		<label asp-for="Rating">Rating:</label>
		<select asp-for="Rating" required>
			<option value="" selected disabled>--</option>
			<option value="G">G</option>
			<option value="PG">PG</option>
			<option value="PG-13">PG-13</option>
			<option value="R">R</option>
		</select>
		<br /><br />

		<label asp-for="Edited">Edited?</label>
		<select asp-for="Edited">
			<option value="" selected disabled>--</option>
			<option value="true">Yes</option>
			<option value="false">No</option>
		</select>

		<br /><br />

		<label asp-for="Lent">Lent To:</label>
		<input asp-for="Lent"/>
		<br /><br />

		<label asp-for="Notes">Notes:</label>
		<input asp-for="Notes" maxlength="25">
		<br /><br />

		<button type="submit">Submit Form</button>

	</form>
</div>
