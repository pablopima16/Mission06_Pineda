@{
    ViewData["Title"] = "Form";
}

<h2>Movie Form</h2>
<p>New Movie Suggestions are always welcomed.</p>

@model Mission06_Pineda.Models.MovieModel


<form method="post">

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" required />
    <br />
    <label asp-for="Year">Year:</label>
    <input asp-for="Year" required />
    <br />
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Category">Category:</label>
    <select asp-for="Category">
        <option value="Miscellaneous">Miscellaneous</option>
        <option value="Comedy">Comedy</option>
        <option value="Drama">Drama</option>
        <option value="Family">Family</option>
        <option value="Television">Television</option>
        <option value="Horror/Suspense">Horror/Suspense</option>
        <option value="Action/Adventure">Action/Adventure</option>
        <option value="VHS">VHS</option>
    </select>
    <br />

    <label asp-for="Director">Director:</label>
    <input asp-for="Director" required />
@*     <br />
    <label asp-for="Director2">Director 2 (if applicable):</label>
    <input asp-for="Director2" />
    <br />
    <label asp-for="Director3">Director 3 (if applicable):</label>
    <input asp-for="Director3" />
    <br />
    <label asp-for="Director4">Director 4 (if applicable):</label>
    <input asp-for="Director4" /> *@
    <br />

    <label asp-for="Edited">Edited (if applicable):</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent To (if applicable):</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="Notes">Notes (if applicable):</label>
    <input asp-for="Notes" maxlength="25" />
    <br />

    <button type="submit">Submit Movie</button>
</form>
